# Makefile for building the 'school' executable

# Compiler
CC = gcc

# Source files
SRC = main.c utils.c

# Object files
OBJS = $(SRC:.c=.o)

# Executable name
EXEC = school

# Default rule
all: $(EXEC)

# Compile source files into object files
%.o: %.c
	$(CC) -c $< -o $@

# Link object files into the executable
$(EXEC): $(OBJS)
	$(CC) $^ -o $@

# Clean rule to remove object files and the executable
clean:
	rm -f $(OBJS) $(EXEC)
